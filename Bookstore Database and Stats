--display the database
SELECT * FROM Heathers_Bookstore;

--dispaly the book name, genre, and price ordered by descending price.
SELECT Name, Genre, Price FROM Heathers_Bookstore 
ORDER BY price desc;

--display the book name, author, and publishing year ordered by ascending year.
SELECT Name, Author, Publishing_Year FROM Heathers_Bookstore 
ORDER BY Publishing_Year asc;

